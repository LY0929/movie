/* movieItem.wxss */
@import "../movieStar/movieStar.wxss";

.movieItem {
    display: flex;
    flex-direction: column;
    width: 200rpx;
    height: 450rpx;
    margin: 20rpx 0;
    padding-bottom: 20rpx;
    border-bottom: 1px solid #ccc;
}

.movieItem>image {
    width: 200rpx;
    height: 350rpx;
    margin-bottom: 30rpx;
    box-shadow: 12rpx 12rpx 6rpx #666;
}

.movieItem>text {
    font-weight: 600;
    font-size: 30rpx;
    color: #666;
    margin-bottom: 30rpx;
}
